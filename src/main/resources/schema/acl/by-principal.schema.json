{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/kattlo/kattlo-cli",
  "title": "ACLByPrincipal",
  "description": "Apache KafkaÂ® ACL declared by Principal",
  "type": "object",
  "definitions": {
    "operation": {
      "title": "Operation",
      "description": "The operation over resources",
      "type": "string",
      "minLength": 1
    },
    "operations": {
      "title": "Operations",
      "description": "The list of operations",
      "type": "array",
      "items": {
        "$ref": "#/definitions/operation"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "ip": {
      "title": "IP",
      "description": "Array of IP addresses",
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "connection": {
      "title": "Connection",
      "description": "Origin addresses to allow or deny network connections",
      "type": "object",
      "properties": {
        "from": {
          "$ref": "#/definitions/ip"
        }
      },
      "required": ["from"],
      "additionalProperties": false
    },
    "notes": {
      "title": "Notes",
      "description": "Notes about the operation",
      "type": "string",
      "minLength": 1
    },
    "to": {
      "title": "To",
      "description": "Principal to apply the access",
      "type": "object",
      "properties": {
        "principal": {
          "description": "The name of user principal",
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["principal"],
      "additionalProperties": false
    },
    "topic": {
      "title": "Topic",
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "description": "The topic name",
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["name"],
      "additionalProperties": true
    },
    "TopicAccess":{
      "allOf": [
        { "$ref": "#/definitions/topic" },
        {
          "properties": {
            "operations": {
              "$ref": "#/definitions/operations"
            }
          },
          "required": ["operations"]
        }
      ]
    },
    "group": {
      "title": "Group",
      "type": "object",
      "properties": {
        "id": {
          "description": "The value of group.id, application.id, connect work group",
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["id"],
      "additionalProperties": true
    },
    "GroupAccess": {
      "allOf": [
        {
          "$ref": "#/definitions/group"
        },
        {
          "properties": {
            "operations": {
              "$ref": "#/definitions/operations"
            }
          },
          "required": ["operations"]
        }
      ]
    },
    "cluster": {
      "title": "Cluster",
      "description": "Allow or deny cluster operations",
      "type": "object",
      "properties": {
        "operations": {
          "$ref": "#/definitions/operations"
        }
      },
      "required": ["operations"],
      "additionalProperties": false
    },
    "transactional": {
      "title": "Transactional",
      "description": "Allow or deny producers to start transactional context",
      "type": "object",
      "properties": {
        "id": {
          "description": "The value of transactional.id",
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["id"],
      "additionalProperties": true
    },
    "TransactionalAccess": {
      "allOf": [
        {"$ref": "#/definitions/transactional"},
        {
          "properties": {
            "operations": {
              "$ref": "#/definitions/operations"
            }
          },
          "required": ["operations"]
        }
      ]
    },
    "consumer": {
      "title": "Consumer",
      "description": "To define accesses for topic consuming and group association",
      "type": "object",
      "properties": {
        "topic": {
          "$ref": "#/definitions/topic"
        },
        "group": {
          "$ref": "#/definitions/group"
        }
      },
      "required": ["topic", "group"],
      "additionalProperties": false
    },
    "producer": {
      "title": "Producer",
      "description": "To define access for topic producing, idempotence and transacional",
      "type": "object",
      "properties": {
        "topic": {
          "$ref": "#/definitions/topic"
        },
        "idempotent":{
          "type": "boolean"
        },
        "transactional":{
          "$ref": "#/definitions/transactional"
        }
      },
      "required": ["topic"],
      "oneOf": [
        {
          "required": ["idempotent"]
        },
        {
          "required": ["transactional"]
        }
      ],
      "additionalProperties": false
    },
    "allow": {
      "title": "Allow",
      "description": "Allow directive",
      "type": "object",
      "properties": {
        "producer": {
          "$ref": "#/definitions/producer"
        },
        "consumer":{
          "$ref": "#/definitions/consumer"
        },
        "topic":{
          "$ref": "#/definitions/TopicAccess"
        },
        "group":{
          "$ref": "#/definitions/GroupAccess"
        },
        "cluster":{
          "$ref": "#/definitions/cluster"
        },
        "transactional": {
          "$ref": "#/definitions/TransactionalAccess"
        },
        "connection":{
          "$ref": "#/definitions/connection"
        }
      },
      "anyOf": [
        {
          "required": ["producer"]
        },
        {
          "required": ["consumer"]
        },
        {
          "required": ["topic"]
        },
        {
          "required": ["group"]
        },
        {
          "required": ["cluster"]
        },
        {
          "required": ["transactional"]
        },
        {
          "required": ["connection"]
        }
      ]
    },
    "deny": {
      "title": "Deny",
      "description": "Deny directive",
      "type": "object",
      "properties": {
        "producer": {
          "$ref": "#/definitions/producer"
        },
        "consumer": {
          "$ref": "#/definitions/consumer"
        },
        "topic":{
          "$ref": "#/definitions/TopicAccess"
        },
        "group":{
          "$ref": "#/definitions/GroupAccess"
        },
        "cluster":{
          "$ref": "#/definitions/cluster"
        },
        "transactional": {
          "$ref": "#/definitions/TransactionalAccess"
        },
        "connection":{
          "$ref": "#/definitions/connection"
        }
      },
      "anyOf": [
        {
          "required": ["producer"]
        },
        {
          "required": ["consumer"]
        },
        {
          "required": ["topic"]
        },
        {
          "required": ["group"]
        },
        {
          "required": ["cluster"]
        },
        {
          "required": ["transactional"]
        },
        {
          "required": ["connection"]
        }
      ]
    },

    "create": {
      "title": "Create",
      "description": "To create ACL",
      "type": "object",
      "properties": {
        "notes": {
          "$ref": "#/definitions/notes"
        },
        "to": {
          "$ref": "#/definitions/to"
        },
        "allow": {
          "$ref": "#/definitions/allow"
        },
        "deny": {
          "$ref": "#/definitions/deny"
        }
      },
      "required": ["to"],
      "anyOf": [
        {
          "required": ["allow"]
        },
        {
          "required": ["deny"]
        }
      ],
      "additionalProperties": false
    },

    "patch": {
      "title": "Patch",
      "description": "To change an ACL",
      "type": "object",
      "properties": {
        "notes": {
          "$ref": "#/definitions/notes"
        },
        "to": {
          "$ref": "#/definitions/to"
        },
        "allow": {
          "$ref": "#/definitions/allow"
        },
        "deny": {
          "$ref": "#/definitions/deny"
        }
      },
      "required": ["to"],
      "anyOf": [
        {
          "required": ["allow"]
        },
        {
          "required": ["deny"]
        }
      ],
      "additionalProperties": false
    },

    "accessId":{
      "title": "AccessId",
      "description": "To remove ACL by identity generated by create or patch",
      "type":"string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },

    "remove":{
      "title": "Remove",
      "type":"object",
      "properties": {
        "notes": {
          "$ref": "#/definitions/notes"
        },
        "accessId":{
          "$ref": "#/definitions/accessId"
        },

        "declaration": {
          "title": "Declaration",
          "description": "Adhoc ACL removal",
          "type": "object",
          "properties": {
            "to": {
              "$ref": "#/definitions/to"
            },
            "allow": {
              "type": "object",
              "properties": {
                "permission": {
                  "$ref": "#/definitions/operations"
                },
                "origin": {
                  "$ref": "#/definitions/ip"
                }
              },
              "anyOf": [
                {
                  "required": ["permission"]
                },
                {
                  "required": ["origin"]
                }
              ],
              "additionalProperties": false
            },
            "deny": {
              "type": "object",
              "properties": {
                "permission": {
                  "$ref": "#/definitions/operations"
                },
                "origin": {
                  "$ref": "#/definitions/ip"
                }
              },
              "anyOf": [
                {
                  "required": ["permission"]
                },
                {
                  "required": ["origin"]
                }
              ],
              "additionalProperties": false
            },
            "inthe":{
              "type": "object",
              "properties": {
                "topic": {
                  "description": "List of topics",
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1,
                  "uniqueItems": true
                },
                "group": {
                  "description": "List of group.id, application.id or connect work group",
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1,
                  "uniqueItems": true
                },
                "cluster":{
                  "description": "The cluster it self",
                  "type":["object", "null"],
                  "additionalProperties": false
                },
                "transactional": {
                  "description": "List of transactional.id",
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1,
                  "uniqueItems": true
                }
              },
              "anyOf": [
                {
                  "required": ["topic"]
                },
                {
                  "required": ["group"]
                },
                {
                  "required": ["cluster"]
                },
                {
                  "required": ["transactional"]
                }
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "to",
            "inthe"
          ],
          "anyOf": [
            {
              "required": ["allow"]
            },
            {
              "required": ["deny"]
            }
          ],
          "additionalProperties": false
        }
      },
      "anyOf": [
        {
          "required": [
            "accessId"
          ]
        },
        {
          "required": [
            "declaration"
          ]
        }
      ],
      "additionalProperties": false
    }
  },

  "properties": {
    "create": {
      "$ref": "#/definitions/create"
    },
    "patch": {
      "$ref": "#/definitions/patch"
    },
    "remove": {
      "$ref": "#/definitions/remove"
    }
  },
  "anyOf": [
    {
      "required": ["create"]
    },
    {
      "required": ["patch"]
    },
    {
      "required": ["remove"]
    }
  ],
  "additionalProperties": false
}
